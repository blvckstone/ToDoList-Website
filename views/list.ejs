<%- include("header") -%>


    <div class="box" id="heading">
        <h1>Its a <%= listTitle %></h1>
    </div>

    <div class="box">
        <% itemShow.forEach(function(itemsobj){ %>
        <form action="/delete" method="post">
        
        <div class="item">

            <input type="checkbox" name="checkbox" value="<%= itemsobj._id %>" onchange="this.form.submit()">
        
            <p><%= itemsobj.name %></p>
            <input type="hidden" name="deleteTitle" value="<%= listTitle %>">

        </form>
        
    </div>
    <% }) %>

    <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item">
        <button class="submit" type="submit" name="list" value="<%= listTitle %>">+</button>
    </form>

    </div>
    
    
    
<%- include("footer") -%>




